$color = #434A54
$gray = #AAB2BD
$aqua = #009EE7
$knewone = #8CADCA
$mint = #37BC9B
$error = #E9573F
$warning = #FFA400
$padding = 10px

hintContent($hint, $type)
  content $hint
  display inline-block
  font-size .8em
  background-color lighten($error, 5%)
  color #FFF
  border-radius 2px
  padding 2px
  font-style normal
  font-weight normal
  line-height 1
  vertical-align text-top
  white-space nowrap
  left 0
  bottom -16px
  position absolute
  display none
  if $type=='danger'
    background-color lighten($error, 5%)
  if $type=='info'
    background-color lighten($knewone, 5%)  
  if $type=='warning'  
    background-color lighten($warning, 5%)  
  &:hover
    z-index 1  
    color $error

hint2($hint, $type2='success')
  position relative
  &:hover
    &:before
      opacity 1
  &:before
    -webkit-font-smoothing antialiased
    opacity .45
    content $hint
    position absolute
    color $mint
    font-size .8em
    white-space nowrap
    left 0
    top -16px
    display nowrap
  //   display inline-block
  //   font-size .8em
  //   color $mint  
  //     top -15px
  //     left -7px
  //     white-space nowrap


    
hint($hint, $type='danger')
  -webkit-font-smoothing antialiased
  color $error !important
  position relative  
  &.cm-before
    &:before
      hintContent($hint, $type)
    &:after
      content null  
  &:after
    hintContent($hint, $type)
  &:hover, &:focus, &:active
    &:before
    &:after
      z-index 1
      box-shadow 0 1px 1px rgba(0,0,0,.125)
      transition scale(1.5)
    
.cm-s-editor.CodeMirror
  font-size 14px
  color $color
  background-image s("url(data:image/png;base64,)")
  .hint
    font-size 13px
    padding 2px $padding
    color $error
    line-height 1
    background-color lighten($error, 60%)
    -webkit-user-select none
    user-select none
    &.info
      color darken($aqua, 50%)
      background-color lighten($aqua, 60%)
      &:before
        content '>'
        color darken(@color, 50%)
    &:before
      content '!'
      margin-right ($padding / 2)
      color darken(@color, 50%)
    > span
      color darken(@color, 50%)
      padding 0 2px
  pre
    padding 0 $padding
    line-height 2
  .CodeMirror-linenumber
    line-height 2
  .CodeMirror-cursor
    margin-top 5px
  .cm-comment
    color lighten(gray, 20%)
    font-style italic  
    font-size .9em
  .cm-err-unknown
    hint('不识别的设置项')
  .cm-err-blank
    hint('请设置值', 'warning')
  .cm-err-question-type
    hint('取值范围：[单选,多选,不定项,判断,问答,填空]', 'warning')
  .cm-err-difficulty    
    hint('取值范围：[低,中,高]', 'warning')
  .cm-err-question-type-required
    hint('请设置题型，格式：[题型]')
  .cm-bracket
    color $knewone
    font-weight bold  
  .cm-section-config-key
    white-space nowrap
    color $knewone
  .cm-section-config-value
    color $mint
    color $gray
  .config-required-in-bracket
    hint('请在方括号[]内完善信息')
  .cm-type-required-in-bracket
    hint('请在方括号[]内填写题型')
  .cm-skill-required-in-bracket
    hint('请在方括号[]内填写技能')
  .cm-question-seq
    color $mint
    font-weight bold
    display inline-block
    min-width 2em
  .cm-question-type
    color $gray
    hint2('题型：')
  .cm-question-skill
    color $gray
    hint2('技能：')  
  .cm-question-title
    color $color
  .cm-property-key
    color $knewone  
  .cm-property-value
    color $gray  
  .property
    padding-left 2em    
  .option
    padding-left 1.5em
    &.option-pure
      padding-left 3.5em
    .cm-option-seq
      color lighten($mint, 20%)
      font-weight bold
      display inline-block
      min-width 2em
    .cm-option-content
      color $color